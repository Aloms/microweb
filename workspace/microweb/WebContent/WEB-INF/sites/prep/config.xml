<?xml version="1.0" encoding="UTF-8"?>
<site name="prep" context="/prep">
	<properties>
		<property name="defaultSlug" value="index.html" />
		<property name="defaultTemplate" value="main.jsp" />
	</properties>
	<domains>
		<!-- definitions for the Prep website -->
		<domain name="prep.microweb.com" isCanonical="true"/>
		<domain name="prep2.microweb.com"/>
	</domains>
	<structure>
		<node id="0" name="prep" label="Prep Home">
			<node id="1" name="users" label="Users">
				<node id="2" name="update" label="Add/Update User"/>
			</node>
			<node id="3" name="threads" label="Threads">
				<node id="4" name="thread" label="Add/Update Thread"/>
			</node>
			<node id="5" name="test">
				<node id="6" name="overrideTemplate" template="override.jsp"/>
				<node id="7" name="page-example.htm" content="example-content"/>
			</node>
		</node>
	</structure>
	<redirects>
		<redirect from="/friendly" to="/threads/thread/thread1"/>
		<redirect from="/friendly/url2"  to="/users"/>
	</redirects>
</site>