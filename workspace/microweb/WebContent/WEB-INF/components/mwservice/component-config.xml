<component name="mwservices">
	<parameters>
		<parameter name="myParam" value="myValue"/>
	</parameters>
	<logger name="microweb.services" level="ALL"/>

	<handlers>
		<handler event="mwservices.install" class="component.impl.Feature"/>
		<handler event="mwservices.activate" class="component.impl.Feature"/>
		<handler event="mwservices.initialise" class="component.impl.Feature"/>
		<handler event="mwservices.deactivate" class="component.impl.Feature"/>
		<handler event="mwservices.uninstall" class="component.impl.Feature"/>
	</handlers>
	
	<extensions>
		<extension xsd="config/http-service.xsd" class="component.impl.HttpServiceFactory">
			<types>
				<type name="HttpService" class="component.model.HttpService"/>
			</types>
		</extension>
	</extensions>
	
	<services>
		<service config="config/mwversion.xml" type="HttpService"/>
	</services>
</component>